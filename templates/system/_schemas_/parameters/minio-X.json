{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "namespace",
    "capacityGb",
    "ingressName",
    "admin"
  ],
  "properties": {
    "namespace": {
      "type": "string"
    },
    "capacityGb": {
      "type": "integer"
    },
    "ingressName": {
      "type": "string"
    },
    "rootUser": {
      "type": "string"
    },
    "rootPassword": {
      "type": "string"
    },
    "ingressUnsec": {
      "type": "boolean",
      "default": false,
      "description": "If true,a secondary ingress will be created with non-ssl protocol. Use with care!"
    },
    "ldap": {
      "type": [ "string", "null" ]
    },
    "admin": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "rootUser",
        "rootPassword"
      ],
      "properties": {
        "rootUser": {
          "type": "string"
        },
        "rootPassword": {
          "type": "string"
        }
      }
    },
    "dependsOn": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}